<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
	x:Class="ToDoActivity.ActivityDetailPage"
	Title="Detail">

	<ContentPage.ToolbarItems>
        <ToolbarItem Text="Edit" Order="Primary" 
                Command="{Binding EditCommand}" />
    </ContentPage.ToolbarItems>
	<ContentPage.Content>
		
		<StackLayout Padding="20" Spacing="10">

			<StackLayout Orientation="Horizontal">
				<Label FontSize="14" Text="Activity Name:" HorizontalOptions="Start" VerticalOptions="Center" WidthRequest="100" />
				<Label Text="{Binding Name}" HorizontalOptions="FillAndExpand" TextColor="White" BackgroundColor="Gray"/>
			</StackLayout>

			<StackLayout Orientation="Horizontal">
				<Label FontSize="14" Text="Description:" HorizontalOptions="Start" VerticalOptions="Center" WidthRequest="100" />
				<Label Text="{Binding Description}" HorizontalOptions="FillAndExpand" TextColor="White" BackgroundColor="Gray"/>
			</StackLayout>

			<StackLayout Orientation="Horizontal">
				<Label FontSize="14" Text="Status:" HorizontalOptions="Start" VerticalOptions="Center" WidthRequest="100" />
				<Label Text="{Binding Status}" HorizontalOptions="FillAndExpand" TextColor="White" BackgroundColor="Gray"/>
			</StackLayout>

			<StackLayout Orientation="Horizontal">
				<Label FontSize="14" Text="DueDate:" HorizontalOptions="Start" VerticalOptions="Center" WidthRequest="100" />
				<Label Text="{Binding DueDate}" HorizontalOptions="FillAndExpand" TextColor="White" BackgroundColor="Gray"/>
			</StackLayout>

			<StackLayout Orientation="Horizontal">
				<Label FontSize="14" Text="Lattitude:" HorizontalOptions="Start" VerticalOptions="Center" WidthRequest="100" />
				<Label Text="{Binding Lattitude}" HorizontalOptions="FillAndExpand" TextColor="White" BackgroundColor="Gray"/>
			</StackLayout>

			<StackLayout Orientation="Horizontal">
				<Label FontSize="14" Text="Longitude:" HorizontalOptions="Start" VerticalOptions="Center" WidthRequest="100" />
				<Label Text="{Binding Longitude}" HorizontalOptions="FillAndExpand" TextColor="White" BackgroundColor="Gray"/>
			</StackLayout>
		</StackLayout>
	</ContentPage.Content>
	
</ContentPage>
